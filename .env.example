# Telegram bot token, issued by @BotFather
TELEGRAM_BOT_TOKEN=123456:ABC

# Public base URL used in download links (must be reachable by Telegram clients)
PUBLIC_BASE_URL=https://media.example.com

# Path where downloaded media will be stored; can be relative
DOWNLOAD_ROOT=downloads

# Optional: enable TLS support inside the container (requires certificates)
ENABLE_TLS=false
SERVER_NAME=media.example.com
TLS_CERT_PATH=/etc/letsencrypt/live/media.example.com/fullchain.pem
TLS_KEY_PATH=/etc/letsencrypt/live/media.example.com/privkey.pem
